        <form action="/signup" method="post" >
            <input type="text"  name="name" class="input" placeholder="Name" required autofocus><br>
            <input type="email"  name="email" class="input" placeholder="Email" required><br>
            <input type="password"  name="password" class="input" placeholder="Password" required><br>
            <input type="password"  name="password_check" class="input" placeholder="Confirm Password" required><br><br>
            <button id="btn" type="submit" >Sign Up</button>
        </form>
        
