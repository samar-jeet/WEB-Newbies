<body>
    <div id="bgi">   
    </div>
    <h1>Website</h1>
    <div class="box" >
        <div class="cmi">
        <a href="/">
        <img src="/images/signup/su_cm.png" alt="cross mark" style="height: 5vh;" ></a></div>
        <br> 
        <img src="/images/signup/su_MenuIcon.png" alt="mi" style="height: 4vh;"> 
